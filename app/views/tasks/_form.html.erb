<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.check_box :completed %>
    <%= f.label :completed %>

  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>
